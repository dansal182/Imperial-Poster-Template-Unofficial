% ---------------------------------------------------------------------------
% Headline
\setbeamercolor{headline}{fg=white, bg=navy}
\setbeamercolor{headline rule}{bg=processblue, fg=processblue}
\setbeamercolor{headline vert}{bg=processblue, fg=processblue}


\setbeamercolor{block body}{bg=white}
\setbeamercolor{block title}{fg=navy, bg=poolblue}

\setbeamercolor{block body alerted}{bg=white}
\setbeamercolor{block title alerted}{fg=navy, bg=poolblue}

\setbeamercolor{block body example}{fg=white, bg=navy}
\setbeamercolor{block title example}{fg=navy, bg=poolblue}


\setbeamercolor{normal text}{fg=black,bg=lightblue}
\setbeamercolor{alerted text}{fg=black, bg=white}
\setbeamercolor{example text}{fg=white, bg=white}

\setbeamercolor{structure}{fg=imperialblue}

\setbeamercolor{background canvas}{fg=black,bg=lightblue}
\setbeamercolor{background}{parent=background canvas}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{caption}[numbered]{}
\useinnertheme{rounded}


